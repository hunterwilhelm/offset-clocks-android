<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey200</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.YesActionBar">
        <item name="colorPrimary">@color/colorGrey500</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorGrey500</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorGrey200</item>
    </style>

    <style name="Button.Primary" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="Button.Light" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/colorGrey900</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/row_main_background_clickable"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/row_main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextGrey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/row_main_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/colorTextWhite"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/row_main_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="@color/colorGrey900"
        android:textSize="20sp"
        android:visibility="gone"
        tools:ignore="RtlCompat" />
</LinearLayout>